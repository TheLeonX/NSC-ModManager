                                <DataGridTextColumn Header="{DynamicResource m_modmanager_001}" Binding="{Binding Path=ModName}" MinWidth="300" IsReadOnly="True" Foreground="{DynamicResource Toolbox_button_text_color_1}" FontFamily="{StaticResource NarutoFont}"/>
