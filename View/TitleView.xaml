                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox HorizontalAlignment="Center"
                                              Command="{Binding DataContext.EnableModIsCheckedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
