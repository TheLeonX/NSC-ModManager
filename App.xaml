<Application x:Class="NSC_ModManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NSC_ModManager"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  
             xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
             StartupUri="View/TitleView.xaml"  Startup="App_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="NarutoFont">Resources/Fonts/#CC2 RocknRoll Latin DB</FontFamily>

            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources RequestedTheme="Dark"/>
                <ui:XamlControlsResources />
                <ResourceDictionary Source="Resources/Styles/LightStyle.xaml" />
                <ResourceDictionary Source="Resources/Localization/lang.xaml" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
